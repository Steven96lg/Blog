---
import { getCollection, getEntry } from 'astro:content';
import { Image } from 'astro:assets';
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';

export const prerender = true;

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { entry: post },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout>
  <Navigation />
  <article>
    <header>
      <h1>{entry.data.title}</h1>
      
      <!-- La imagen se maneja automÃ¡ticamente -->
      <Image 
        src={entry.data.image} 
        alt={entry.data.title}
        width={800}
        height={400}
        class="cover-image"
      />
      
      <div class="meta">
        <time datetime={entry.data.pubDate.toISOString()}>
          {entry.data.pubDate.toLocaleDateString('es-ES')}
        </time>
        <span class="tag">{entry.data.tag}</span>
      </div>
      
      <p class="description">{entry.data.description}</p>
    </header>
    
    <div class="content">
      <Content />
    </div>
  </article>
</Layout>

<style>
  article {
    max-width: 800px;
    margin: 100px auto;
    padding: 0 1rem;
    font-family: "Archivo Narrow", serif;
  }

  header {
    margin-bottom: 3rem;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .cover-image {
    width: 100%;
    height: auto;
    border-radius: 12px;
    margin: 1.5rem 0;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .meta {
    display: flex;
    gap: 1rem;
    align-items: center;
    margin: 1rem 0;
    font-size: 0.9rem;
    color: #666;
  }

  .tag {
    background: #e2e8f0;
    padding: 0.25rem 0.75rem;
    border-radius: 999px;
    font-size: 0.8rem;
  }

  .description {
    font-size: 1.1rem;
    line-height: 1.6;
    color: #555;
    font-style: italic;
  }

  .content {
    line-height: 1.7;
  }

  .content :global(p) {
    margin-bottom: 1.5rem;
  }

  .content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 2rem 0;
  }
</style>