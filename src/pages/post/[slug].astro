---
import { getCollection, getEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';

export const prerender = true;

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { entry: post },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

let postViews = 0;
---

<Layout>
  <Navigation />
  <article>
    <header>
      <h1>{entry.data.title}</h1>
      
      <!-- La imagen se maneja automÃ¡ticamente -->
      <!--<Image 
        src={entry.data.image} 
        alt={entry.data.title}
        width={800}
        height={400}
        class="cover-image"
      />-->
      <div class="meta">
        <span class="date-post">{new Date(entry.data.pubDate).toLocaleDateString('es-MX', { year: 'numeric', month: 'short', day: 'numeric' })}</span>
        <span class="tag">{entry.data.tag}</span>
         <div class="views-only-post"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 12 12"><path fill="#666666" d="M4 9h3V8h1V5H7V4h1v1h1v1h1V4H9V3H8V2H3v1H2v1H1v2h1V5h1V4h1v1H3v3h1Zm-2 1h1V9H2ZM1 9h1V8H1ZM0 8h1V6H0Zm3 3h5v-1H3Zm5-1h1V9H8ZM6 7V6H5V5h1v1h1v1Zm3 2h1V8H9Zm1-1h1V6h-1Zm0 0"/></svg><span>{postViews}</span></div>
      </div>
    </header>
    
    <div class="content">
      <Content />
    </div>
  </article>
</Layout>

<style>
  article {
    max-width: 800px;
    margin: 100px auto;
    padding: 0 1rem;
    padding-bottom: 60px;
    font-family: "Archivo Narrow", serif;
  }

  header {
    margin-bottom: 1rem;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    line-height: 1;
  }

  .cover-image {
    width: 100%;
    height: auto;
    border-radius: 12px;
    margin: 1.5rem 0;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .meta {
    display: flex;
    gap: 1rem;
    align-items: center;
    margin: 1rem 0;
    font-size: 0.9rem;
    color: #666;
    & .date-post {
      background-color: rgb(44, 146, 172);
      color: white;
      padding: 0.25rem 0.75rem;
    }
  }

  .tag {
    background: black;
    color: white;
    padding: 0.25rem 0.75rem;
    font-size: 1rem;
  }

  .description {
    font-size: 1.1rem;
    line-height: 1.6;
    color: #555;
    font-style: italic;
  }

  .content {
    line-height: 1.7;
    font-family: 'Archivo Narrow', serif;
  }

 

  .content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 2rem 0;
  }

  .content :global(pre){
    background: #f4f4f4;
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 1.5rem 0;
  }
</style>